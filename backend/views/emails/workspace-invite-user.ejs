<%- include(`/${root}/emails/layouts/base`, { 
    subject: 'WorkSpaces Invitation',
    root: root,
    appName: appName,
    logoUrl: logoUrl,
    name: name,
    userName: userName,
    courseName: courseName,
    registrationCode: registrationCode,
    password: password,
    body: `
       <section style="max-width: 600px; margin: 0 auto; padding: 30px 0 0 0;">
        <div style="border: 1px solid #5B189B;">
          <div style="border-bottom: 1px solid #5b189b;text-align: center;background-color: #FFFFFF;padding: 17px 15px;">
            <a href="#" style="font-size: 28px;text-decoration: none;color:#000;font-weight: 600;font-family: 'Montserrat', sans-serif; display:inline-block;">
              <img src="${logoUrl}" alt="Logo" style="width: 80%;">
            </a>
          </div>
          <div style="max-width: 700px; margin: 0 auto;">
            <div style="font-family: 'Montserrat', sans-serif;padding: 30px;border-radius: 8px;box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);font-size: 15px;line-height: 23px;">
              <p>Dear <strong>${name}</strong>,</p>
              <p>A new Workspace has been provided for course <strong>${courseName}</strong>. You can log in to the workspace once it is completely ready.</p>
              <p>Follow the steps below to quickly get up and running with your WorkSpace:</p>
              <p>
              1. Download and install a WorkSpaces Client for your favorite devices: <strong><a href="https://clients.amazonworkspaces.com/" target="_blank">https://clients.amazonworkspaces.com/</a></strong><br/>
              2. Launch the client and enter the following registration code: <strong>${registrationCode}</strong><br/>
              3. Login with your password: <strong>${password}</strong>. Your username is <strong>${userName}</strong><br/>
              </p>
              <p>If you have any Issues connecting to your WorkSpace, please contact your administrator.</p>
              <p>Best regards,<br><strong>${process.env.APP_NAME}</strong></p>
            </div>
          </div>
          <div style="text-align: center; border-top: 1px solid #5b189b; background-color: #ffffff; padding: 15px 15px;">
            <p style="font-size: 14px; color:#5B189B; line-height: 18px; margin: 0; font-family: 'Montserrat', sans-serif; font-weight: 400;">
              &copy; <strong>${new Date().getFullYear()} ${process.env.APP_NAME}. All rights reserved.</strong>
            </p>
          </div>
        </div>
      </section>
    `,
    unsubscribeLink: null
}) %>
