<%- include(`/${root}/emails/layouts/base`, { 
  subject: 'Account Updated!',
  root,
  appName,
  logoUrl:logoUrl,
  userName,
  updatedFieldsHtml:updatedFieldsHtml,
  body: `
    <section style="max-width: 600px; margin: 0 auto; padding: 30px 0 0 0;">
      <div style="border: 1px solid #5B189B;">
        <div style="border-bottom: 1px solid #5B189B; text-align: center; background-color: #FFFFFF; padding: 17px 15px;">
          <a href="#" style="display: inline-block;">
            <img src="${logoUrl}" alt="${appName} Logo" style="width: 80%;">
          </a>
        </div>
        <div style="padding: 30px; font-family: 'Montserrat', sans-serif; font-size: 15px; line-height: 23px;">
          <p>Hi <strong>${userName}</strong>,</p>
          <p>Your account has been updated by the Admin.</p>
          <p><strong>Please find your updated data below:</strong></p>
          <ul style="list-style: none; padding-left: 0;">
            ${updatedFieldsHtml}
          </ul>
          <p>If you have any questions or need assistance, feel free to reach out.</p>
          <p>Best regards,<br><strong>${process.env.APP_NAME}</strong></p>
        </div>
        <div style="text-align: center; border-top: 1px solid #5B189B; background-color: #FFFFFF; padding: 15px;">
          <p style="font-size: 14px; color: #5B189B; margin: 0; font-family: 'Montserrat', sans-serif;">
            &copy; <strong>${new Date().getFullYear()} ${process.env.APP_NAME}. All rights reserved.</strong>
          </p>
        </div>
      </div>
    </section>
  `,
  unsubscribeLink: null
}) %>
